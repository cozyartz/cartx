---
import '../styles/global.css';
import { getBusinessConfig } from '../data/businesses.js';

const config = getBusinessConfig('loadaspud');

// Transform menu data to match template format
const menuSections = [
  {
    category: 'Signature Loaded Spuds',
    description: 'Our famous loaded potatoes made fresh to order',
    items: config.menu.signatureSpuds,
    icon: 'ü•î'
  },
  {
    category: 'Load-A-Taco',
    description: 'Fresh tacos and nachos with your favorite toppings',
    items: config.menu.loadATaco,
    icon: 'üåÆ'
  },
  {
    category: 'Load-A-Salad', 
    description: 'Fresh garden salads with premium toppings',
    items: config.menu.loadASalad,
    icon: 'ü•ó'
  },
  {
    category: 'Beverages',
    description: 'Refreshing drinks to complement your meal',
    items: config.menu.beverages,
    icon: 'ü•§'
  },
  {
    category: 'Snacks & Treats',
    description: 'Perfect additions to complete your meal',
    items: config.menu.snacks,
    icon: 'üç™'
  }
];

const restaurantInfo = {
  name: config.businessName,
  location: `${config.address.city}, ${config.address.state}`,
  phone: config.phone,
  address: `${config.address.street}, ${config.address.city}, ${config.address.state} ${config.address.zip}`
};
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Load-a-Spud Potato Bar - Gourmet Loaded Potatoes in Battle Creek, MI</title>
  <meta name="description" content="Battle Creek's premier potato bar featuring signature loaded spuds, tacos, fresh salads, and more. From our famous Taco Spud to BBQ Chicken - we load it up fresh!">
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --potato-brown: #8B4513;
      --potato-gold: #DAA520;
      --potato-cream: #F5DEB3;
      --potato-dark: #2F1B14;
      --potato-accent: #FFD700;
      --potato-green: #228B22;
    }
    
    .potato-gradient {
      background: linear-gradient(135deg, var(--potato-brown), var(--potato-gold));
    }
    
    .potato-text {
      color: var(--potato-gold);
    }
    
    .potato-accent {
      color: var(--potato-accent);
    }
    
    .potato-bg {
      background-color: var(--potato-dark);
    }
    
    .rustic-card {
      background: rgba(139, 69, 19, 0.1);
      backdrop-filter: blur(10px);
      border: 2px solid rgba(218, 165, 32, 0.3);
    }
    
    .comfort-hover:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(218, 165, 32, 0.4);
    }
    
    .spud-title {
      font-family: 'Fredoka One', sans-serif;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    
    /* Potato animation */
    @keyframes bounce-potato {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-10px); }
      60% { transform: translateY(-5px); }
    }
    
    .bouncing-potato {
      animation: bounce-potato 2s infinite;
    }
    
    /* Cozy comfort styling */
    .comfort-section {
      background: linear-gradient(45deg, rgba(139, 69, 19, 0.05), rgba(218, 165, 32, 0.05));
    }
  </style>
</head>
<body class="font-inter potato-bg min-h-screen text-white">
  
  <!-- Hero Section -->
  <header class="relative potato-gradient text-white py-12 lg:py-16 overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30"></div>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <!-- Logo Section -->
        <div class="flex justify-center items-center mb-8 relative">
          <div class="relative">
            <h1 class="spud-title text-4xl sm:text-6xl md:text-7xl lg:text-8xl font-bold tracking-wider text-white">
              <span class="bouncing-potato inline-block">ü•î</span> LOAD-A-SPUD <span class="bouncing-potato inline-block">ü•î</span>
            </h1>
            <p class="text-lg sm:text-xl md:text-2xl font-bold tracking-widest opacity-90 mt-2">
              POTATO BAR & GRILL
            </p>
          </div>
        </div>
        
        <p class="text-xl sm:text-2xl mb-6 opacity-85 flex items-center justify-center gap-2">
          <svg class="w-6 h-6 potato-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
          </svg>
          Battle Creek, Michigan
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 md:gap-6 justify-center items-center mb-6">
          <div class="flex items-center gap-3 text-lg rustic-card rounded-full px-6 py-3">
            <svg class="w-5 h-5 potato-accent" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <span class="font-semibold">{restaurantInfo.phone}</span>
          </div>
          <div class="flex items-center gap-3 text-lg rustic-card rounded-full px-6 py-3">
            <svg class="w-5 h-5 potato-accent" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
            <span class="font-semibold">4.9‚òÖ Local Favorite</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Quick Info Bar -->
  <div class="bg-gradient-to-r from-amber-700 to-amber-600 text-white py-4">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center items-center gap-6 text-center">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 potato-accent" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
          </svg>
          <div>
            <div class="font-bold">Open Today</div>
            <div class="text-sm opacity-90">11:00 AM - 8:00 PM</div>
          </div>
        </div>
        <div class="bg-yellow-500 text-amber-900 px-6 py-2 rounded-full font-bold text-lg flex items-center gap-2">
          <span class="text-xl">ü•î</span>
          <span>Fresh Made to Order</span>
        </div>
        <div class="text-center">
          <div class="font-bold">Famous Taco Spud</div>
          <div class="text-sm opacity-90">Starting at $1.99</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation -->
  <nav class="bg-black/50 backdrop-blur-sm shadow-lg sticky top-0 z-40 border-b border-amber-700">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <div class="flex justify-between items-center">
        <a href="/" class="flex items-center gap-2">
          <span class="text-2xl">ü•î</span>
          <span class="text-xl font-bold potato-text spud-title">Load-a-Spud</span>
        </a>
        <div class="hidden md:flex gap-6">
          <a href="#menu" class="potato-text font-bold hover:text-white transition-colors">Menu</a>
          <a href="#about" class="text-gray-300 hover:potato-text transition-colors font-semibold">About</a>
          <a href="#contact" class="text-gray-300 hover:potato-text transition-colors font-semibold">Contact</a>
        </div>
        <div class="md:hidden">
          <button class="text-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Menu Section -->
  <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-12" id="menu">
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl spud-title font-bold potato-text mb-4">Our Menu</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto">
        Fresh ingredients, bold flavors, and loaded to perfection. Every spud made to order with love!
      </p>
    </div>

    <div class="space-y-16">
      {menuSections.map((section) => (
        <section class="menu-section comfort-section py-8 rounded-3xl">
          <div class="text-center mb-8">
            <div class="text-6xl mb-4">{section.icon}</div>
            <h3 class="text-3xl md:text-4xl spud-title font-bold potato-text mb-2 border-b-4 border-amber-600 inline-block pb-2">
              {section.category}
            </h3>
            <p class="text-gray-300 mt-4 text-lg">{section.description}</p>
          </div>
          
          <div class="grid gap-6 lg:gap-8 sm:grid-cols-2 lg:grid-cols-3">
            {section.items.map((item) => (
              <div class="rustic-card rounded-2xl p-6 shadow-lg comfort-hover transition-all duration-300 group relative overflow-hidden">
                <div class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-yellow-400/20 to-amber-600/20 rounded-bl-full transform translate-x-6 -translate-y-6 group-hover:scale-110 transition-transform duration-300"></div>
                <div class="relative z-10">
                  <div class="flex flex-col sm:flex-row justify-between items-start mb-4 gap-2">
                    <h4 class="font-bold text-lg text-white group-hover:potato-text transition-colors flex-1 pr-2 leading-tight">
                      {item.name}
                    </h4>
                    {item.price && (
                      <span class="text-xl font-bold text-white potato-gradient px-4 py-2 rounded-full shadow-md group-hover:scale-105 transition-transform duration-300">
                        {item.price}
                      </span>
                    )}
                  </div>
                  {item.description && (
                    <p class="text-gray-300 text-sm leading-relaxed group-hover:text-gray-200 transition-colors">
                      {item.description}
                    </p>
                  )}
                  <div class="mt-4 flex justify-between items-center">
                    <div class="flex gap-1">
                      {[...Array(5)].map((_, i) => (
                        <svg class="w-4 h-4 potato-accent" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                        </svg>
                      ))}
                    </div>
                    <button class="potato-text font-semibold text-sm hover:text-yellow-300 transition-colors hidden sm:block">
                      Add to Order ‚Üí
                    </button>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </section>
      ))}
    </div>
  </main>

  <!-- Call to Action Section -->
  <section class="potato-gradient text-white py-16 mt-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl md:text-5xl spud-title font-bold mb-6">Ready to Load Up?</h2>
      <p class="text-xl mb-8 opacity-90">Come taste Battle Creek's favorite loaded potatoes!</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <button class="bg-yellow-500 text-amber-900 px-8 py-4 rounded-full font-bold text-lg hover:bg-yellow-400 transition-colors">
          Order Takeout
        </button>
        <button class="border-2 border-white text-white px-8 py-4 rounded-full font-bold text-lg hover:bg-white hover:text-amber-900 transition-colors">
          Call {restaurantInfo.phone}
        </button>
      </div>
    </div>
  </section>

  <!-- Hours & Location -->
  <section class="bg-black/30 py-16" id="contact">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        <div class="text-center">
          <h3 class="text-2xl spud-title font-bold potato-text mb-4">Hours of Operation</h3>
          <div class="space-y-2">
            {config.hours.map((hour) => (
              <div class="flex justify-center items-center gap-3">
                <span class="font-semibold text-white w-20 text-left">{hour.split(':')[0]}:</span>
                <span class="text-gray-300">{hour.split(':').slice(1).join(':')}</span>
              </div>
            ))}
          </div>
        </div>
        
        <div class="text-center">
          <h3 class="text-2xl spud-title font-bold potato-text mb-4">Visit Us</h3>
          <div class="space-y-3">
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5 potato-text" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              <span class="text-white text-center">{restaurantInfo.address}</span>
            </div>
            <div class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5 potato-text" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
              <span class="text-white">{restaurantInfo.phone}</span>
            </div>
            <div class="mt-4">
              <button class="bg-amber-600 text-white px-6 py-3 rounded-full font-bold hover:bg-amber-500 transition-colors">
                Get Directions
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-black/50 text-white py-12 border-t border-amber-700">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center md:text-left">
          <div class="flex items-center justify-center md:justify-start gap-2 mb-4">
            <span class="text-3xl">ü•î</span>
            <h4 class="text-2xl spud-title font-bold">Load-a-Spud</h4>
          </div>
          <p class="text-gray-300">
            Battle Creek's favorite potato bar serving comfort food with a smile since 2018.
          </p>
        </div>
        
        <div class="text-center">
          <h4 class="text-xl font-bold mb-4">Quick Links</h4>
          <div class="space-y-2">
            <a href="#menu" class="block text-gray-300 hover:text-white transition-colors">Menu</a>
            <a href="#hours" class="block text-gray-300 hover:text-white transition-colors">Hours</a>
            <a href="#location" class="block text-gray-300 hover:text-white transition-colors">Location</a>
            <a href="#contact" class="block text-gray-300 hover:text-white transition-colors">Contact</a>
          </div>
        </div>
        
        <div class="text-center md:text-right">
          <h4 class="text-xl font-bold mb-4">Connect With Us</h4>
          <p class="text-gray-300 mb-4">Follow for daily specials</p>
          <div class="flex justify-center md:justify-end gap-4">
            <button class="text-gray-300 hover:text-white transition-colors">Facebook</button>
            <button class="text-gray-300 hover:text-white transition-colors">Instagram</button>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-600 mt-8 pt-8 text-center">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-gray-300">
            ¬© {new Date().getFullYear()} Load-a-Spud Potato Bar. All rights reserved.
          </p>
          <p class="text-sm text-gray-400">
            Website designed by <a href="https://cartfullofx.com" class="potato-text hover:text-yellow-300 transition-colors font-semibold">Cozyartz Media Group</a>
          </p>
        </div>
      </div>
    </div>
  </footer>

  <script>
    // Add scroll animations
    document.addEventListener('DOMContentLoaded', function() {
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
          }
        });
      }, observerOptions);
      
      document.querySelectorAll('.menu-section').forEach(section => {
        section.style.opacity = '0';
        section.style.transform = 'translateY(20px)';
        section.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(section);
      });
    });
  </script>
</body>
</html>