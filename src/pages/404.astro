---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Home, ArrowLeft } from 'lucide-astro';
---

<html lang="en" class="scroll-smooth">
  <head>
    <SEO 
      title="Page Not Found | Cozyartz Media Group"
      description="The page you're looking for doesn't exist. Explore our web design and digital marketing services for Michigan businesses."
      businessName="Cozyartz Media Group"
      phone="(269) 261-0069"
      email="info@wantthissite.com"
      address={{
        city: "Battle Creek",
        state: "Michigan",
        zip: "49015"
      }}
      geo={{
        latitude: 42.3211,
        longitude: -85.1797
      }}
      businessType="ProfessionalService"
      robotsContent="noindex, follow"
    />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet"></noscript>
  </head>
  <body class="min-h-screen gradient-bg font-inter">
    <!-- Header -->
    <Header />
    
    <!-- 404 Content -->
    <main class="min-h-screen flex flex-col justify-center items-center text-center px-4 pt-20">
      <div class="max-w-2xl mx-auto">
        <div class="glass-effect rounded-3xl p-8 md:p-12 border border-dark-border">
          <!-- 404 Icon -->
          <div class="text-8xl mb-6" role="img" aria-label="Page not found">üîç</div>
          
          <!-- 404 Heading -->
          <h1 class="text-4xl md:text-6xl font-black neon-glow mb-6 font-fredoka text-accent-slate">
            Page Not Found
          </h1>
          
          <!-- 404 Description -->
          <p class="text-xl text-white/85 mb-8 leading-relaxed">
            Oops! The page you're looking for doesn't exist. 
            But don't worry - we can help you find what you need!
          </p>
          
          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/" 
               class="pulse-button bg-gradient-to-r from-accent-slate to-accent-teal hover:from-accent-slate-light hover:to-accent-teal-light text-white font-black px-8 py-4 rounded-full text-lg shadow-2xl transform transition-all duration-300 hover:scale-105"
               aria-label="Return to home page">
              <Home class="w-5 h-5 inline mr-2" aria-hidden="true" />
              Go Home
            </a>
            
            <button onclick="history.back()" 
                    class="glass-effect px-6 py-3 rounded-full text-white font-semibold text-lg hover:bg-white/10 transition-all duration-300"
                    aria-label="Go back to previous page">
              <ArrowLeft class="w-5 h-5 inline mr-2" aria-hidden="true" />
              Go Back
            </button>
          </div>
          
          <!-- Help Section -->
          <div class="mt-12 p-6 bg-gradient-to-r from-accent-slate/20 to-accent-teal/20 rounded-2xl">
            <h2 class="text-xl font-bold text-white mb-4">Need Help?</h2>
            <p class="text-white/80 mb-4">
              Contact us for web design, SEO, or digital marketing services for your Michigan business.
            </p>
            <a href="tel:(269)261-0069" 
               class="text-accent-teal hover:text-accent-teal-light font-bold transition-colors"
               aria-label="Call Cozyartz Media Group">
              üìû (269) 261-0069
            </a>
          </div>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <Footer />
  </body>
</html>