---
import '../styles/global.css';
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FuturisticPortfolioCarousel from '../components/FuturisticPortfolioCarousel.astro';
import { Globe, Search, TrendingUp, Server, Settings, Rocket, Plane, Phone, Info, MapPin, CheckCircle, ArrowLeft, Lightbulb, X } from 'lucide-astro';

// Icon mapping object to convert string names to Lucide components
const iconMap = {
  globe: Globe,
  search: Search,
  'trending-up': TrendingUp,
  server: Server,
  settings: Settings,
  rocket: Rocket,
  plane: Plane,
  phone: Phone,
  info: Info,
  'map-pin': MapPin,
  'check-circle': CheckCircle,
  'arrow-left': ArrowLeft,
  lightbulb: Lightbulb,
  x: X
};

// Helper function to get icon component
function getIconComponent(iconName) {
  return iconMap[iconName] || Globe; // fallback to Globe if icon not found
}

const services = [
  {
    icon: "globe",
    title: "Professional Web Development",
    description: "Custom-designed websites that look amazing and convert visitors into customers",
    details: ["Responsive design", "Mobile optimization", "Fast loading speeds", "Modern aesthetics"]
  },
  {
    icon: "search",
    title: "SEO & Google Maps Listing",
    description: "Get found by customers searching for your business online",
    details: ["Google My Business setup", "Local SEO optimization", "Search engine visibility", "Google Maps integration"]
  },
  {
    icon: "trending-up",
    title: "Digital Marketing",
    description: "Comprehensive marketing strategies to grow your business",
    details: ["Social media management", "Content marketing", "Online advertising", "Brand development"]
  },
  {
    icon: "server",
    title: "Domain & Hosting",
    description: "Professional domain name and reliable hosting included",
    details: ["Custom domain name", "SSL certificate", "99.9% uptime guarantee", "Daily backups"]
  },
  {
    icon: "settings",
    title: "Monthly Maintenance",
    description: "Ongoing support and updates to keep your site running perfectly",
    details: ["Security updates", "Content updates", "Performance monitoring", "Technical support"]
  },
  {
    icon: "rocket",
    title: "Fast Setup & Launch",
    description: "Get your business online quickly with our streamlined process",
    details: ["Quick turnaround", "Professional design", "Content creation", "Launch support"]
  },
  {
    icon: "plane",
    title: "Part 107 Drone Services",
    description: "FAA certified drone pilot for aerial photography, videography, and commercial drone operations",
    details: ["Aerial photography & video", "Real estate marketing", "Construction site surveys", "Event coverage"]
  }
];

const businessInfo = {
  agency: "Cozyartz Media Group",
  tagline: "WOSB Certified Small Business",
  specialOffer: "$500",
  normalPrice: "$1,250 - $3,500",
  phone: "(269) 261-0069"
};

const michiganCities = [
  "Battle Creek", "Kalamazoo", "Grand Rapids", "Detroit", "Lansing", "Ann Arbor", 
  "Flint", "Sterling Heights", "Warren", "Dearborn", "Livonia", "Troy", "Canton", 
  "Westland", "Farmington Hills", "Southfield", "Wyoming", "Rochester Hills", 
  "Taylor", "Pontiac", "Royal Oak", "Novi", "Dearborn Heights", "Jackson", 
  "Saginaw", "Bay City", "Midland", "Mount Pleasant", "Marquette", "Traverse City"
];

---

<html lang="en" class="scroll-smooth">
  <head>
    <SEO 
      title="Cozyartz Media Group | #1 Web Design & Digital Marketing Agency in Michigan | WOSB Certified"
      description="🚀 Michigan's Premier Web Design Agency! Professional websites, SEO, Google Maps listing & digital marketing for small businesses. WOSB Certified. Serving Battle Creek, Kalamazoo, Grand Rapids, Detroit & all of Michigan. Special offer: $500 (normally $1,250-$3,500). Call (269) 261-0069!"
      keywords="web design Michigan, digital marketing Michigan, SEO Michigan, website development Battle Creek, website design Kalamazoo, web designer Grand Rapids, small business websites Michigan, Google Maps listing Michigan, professional web development, WOSB certified web design, Michigan small business marketing, responsive web design Michigan, e-commerce websites Michigan, local SEO Michigan, website maintenance Michigan, Part 107 drone services Michigan, aerial photography Michigan, drone pilot Battle Creek, commercial drone services, real estate drone photography Michigan, construction drone surveys Michigan"
      canonical="https://cartfullofx.com/"
      ogTitle="🚀 Cozyartz Media Group - Michigan's #1 Web Design & Digital Marketing Agency | WOSB Certified"
      ogDescription="🚀 Transform your Michigan business with professional web design, SEO, and digital marketing! WOSB Certified agency serving Battle Creek, Kalamazoo, Grand Rapids, Detroit & beyond. Special offer: $500 (normally $1,250-$3,500). Call (269) 261-0069!"
      ogUrl="https://cartfullofx.com"
      ogImage="https://cartfullofx.com/cozyartz-og-image.jpg"
      twitterImage="https://cartfullofx.com/cozyartz-twitter-image.jpg"
      businessName="Cozyartz Media Group"
      phone="(269) 261-0069"
      email="info@cartfullofx.com"
      address={{
        city: "Battle Creek",
        state: "Michigan",
        zip: "49015",
        country: "United States"
      }}
      geo={{
        latitude: 42.3211,
        longitude: -85.1797
      }}
      businessType="ProfessionalService"
      services={[
        "Professional Website Development",
        "SEO & Digital Marketing", 
        "Google Maps Listing",
        "Domain & Hosting",
        "Monthly Maintenance",
        "Part 107 Drone Services"
      ]}
      hours={[
        "Monday: 9:00 AM - 5:00 PM",
        "Tuesday: 9:00 AM - 5:00 PM", 
        "Wednesday: 9:00 AM - 5:00 PM",
        "Thursday: 9:00 AM - 5:00 PM",
        "Friday: 9:00 AM - 5:00 PM",
        "Saturday: 10:00 AM - 2:00 PM",
        "Sunday: Closed"
      ]}
      foundingDate="2017"
    />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Font Awesome CSS removed - using Lucide icons instead -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet"></noscript>
  </head>
  <body class="min-h-screen gradient-bg font-inter">
    
    <!-- Header -->
    <Header />
    
    <!-- Hero Section -->
    <section class="min-h-screen flex flex-col justify-center items-center text-center px-4 relative overflow-hidden pt-20" id="home">
      
      <!-- Hero Glow Effect -->
      <div class="hero-glow absolute inset-0 w-full h-full"></div>
      
      <!-- Floating particles background -->
      <div class="floating-particles absolute inset-0 pointer-events-none">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
      </div>
      
      <!-- Main Hero Content -->
      <div class="slide-in max-w-6xl mx-auto relative z-10">
        <div class="glass-effect rounded-3xl p-8 md:p-12 mb-8 border border-dark-border">
          <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-black neon-glow mb-6 font-fredoka text-accent-slate professional-spacing">
            <span class="sparkle" aria-hidden="true">✨</span> GET YOUR BUSINESS ONLINE <span class="sparkle" aria-hidden="true">🚀</span>
          </h1>
          
          <p class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-8 opacity-95 professional-text">
            Professional Websites That Actually Get You Customers • Built for Michigan Businesses • WOSB Certified
          </p>
          
          <!-- Special Offer Banner -->
          <div class="special-offer-banner glass-effect rounded-2xl p-6 md:p-8 mb-8 border-2 border-accent-slate/40">
            <div class="text-accent-teal text-3xl mb-3" aria-hidden="true">💡</div>
            <h2 class="text-2xl md:text-3xl font-black text-accent-slate mb-4 font-fredoka">
              LIMITED TIME SPECIAL OFFER
            </h2>
            <div class="flex flex-col md:flex-row items-center justify-center gap-4 md:gap-8 mb-4">
              <div class="text-center">
                <div class="text-gray-400 line-through text-lg md:text-xl">Normally {businessInfo.normalPrice}</div>
                <div class="text-4xl md:text-5xl font-black text-accent-teal">{businessInfo.specialOffer}</div>
                <div class="text-white font-semibold">One-time setup</div>
              </div>
              <div class="text-accent-slate text-3xl hidden md:block">→</div>
              <div class="text-center">
                <div class="text-white/80 text-lg">Plus monthly service fee</div>
                <div class="text-accent-teal-light font-bold">Ongoing maintenance & support</div>
              </div>
            </div>
            <p class="text-white/90 text-lg leading-relaxed">
              <strong>Here's what makes us different:</strong> We build a demo of your actual website first - then you decide if you want it! 
              No mockups, no surprises. See your business online before you pay anything.
            </p>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <a href="tel:(269)261-0069" 
               class="pulse-button bg-gradient-to-r from-accent-slate to-accent-teal hover:from-accent-slate-light hover:to-accent-teal-light text-white font-black px-8 py-4 rounded-full text-xl shadow-2xl transform transition-all duration-300 hover:scale-105 w-full sm:w-auto text-center focus:outline-none focus:ring-4 focus:ring-accent-teal/50"
               aria-label="Call Cozyartz Media Group at (269) 261-0069">
              <Phone class="w-5 h-5 inline mr-2" aria-hidden="true" /> CALL NOW: {businessInfo.phone}
            </a>
            
            <button id="show-toast" class="glass-effect px-6 py-3 rounded-full text-white font-semibold text-lg hover:bg-white/10 transition-all duration-300 w-full sm:w-auto focus:outline-none focus:ring-4 focus:ring-white/30" aria-label="Show more information about our services">
              <Info class="w-5 h-5 inline mr-2" aria-hidden="true" /> Learn More
            </button>
          </div>
          
          <!-- Michigan Cities We Serve -->
          <div class="glass-effect rounded-2xl p-6 mb-8 max-w-4xl mx-auto">
            <h3 class="text-xl font-bold text-white mb-4 text-center">
              <MapPin class="w-5 h-5 inline mr-2 text-accent-slate" aria-hidden="true" /> Proudly Serving All of Michigan
            </h3>
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-2 text-sm text-white/70">
              {michiganCities.slice(0, 18).map((city) => (
                <div class="text-center hover:text-accent-teal transition-colors duration-300">
                  {city}
                </div>
              ))}
              <div class="text-center text-accent-slate font-semibold">
                + Many More!
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-20 px-4" id="web-design">
      <div class="max-w-7xl mx-auto">
        
        <!-- Section Header -->
        <div class="text-center mb-16 slide-in">
          <h2 class="text-4xl md:text-5xl font-black text-white neon-glow mb-6 font-fredoka professional-spacing">
            SEE YOUR WEBSITE LIVE BEFORE YOU BUY
          </h2>
          <p class="text-xl text-white/85 font-medium max-w-3xl mx-auto leading-relaxed">
            These are real websites we've built for Michigan businesses. Click any demo to see what your site could look like!
          </p>
        </div>

        <!-- Portfolio Carousel -->
        <div class="mb-16 slide-in">
          <FuturisticPortfolioCarousel />
        </div>

        <!-- How It Works Section -->
        <div class="glass-effect rounded-3xl p-8 md:p-12 mb-16 border border-dark-border slide-in">
          <div class="text-center mb-12">
            <h3 class="text-3xl md:text-4xl font-black text-white mb-4 font-fredoka">
              <span class="sparkle" aria-hidden="true">⚡</span> How This Works <span class="sparkle" aria-hidden="true">🎯</span>
            </h3>
            <p class="text-xl text-white/80 max-w-3xl mx-auto">
              We make getting online simple and risk-free
            </p>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8 text-center">
            <div class="space-y-4">
              <div class="w-16 h-16 bg-gradient-to-br from-accent-slate to-accent-teal rounded-full flex items-center justify-center mx-auto">
                <span class="text-2xl font-black text-white">1</span>
              </div>
              <h4 class="text-xl font-bold text-white">We Build Your Demo</h4>
              <p class="text-white/70 leading-relaxed">
                Tell us about your business and we'll create a live demo website. 
                See your actual business online - not just a mockup!
              </p>
            </div>
            
            <div class="space-y-4">
              <div class="w-16 h-16 bg-gradient-to-br from-accent-slate to-accent-teal rounded-full flex items-center justify-center mx-auto">
                <span class="text-2xl font-black text-white">2</span>
              </div>
              <h4 class="text-xl font-bold text-white">You Decide</h4>
              <p class="text-white/70 leading-relaxed">
                Love what you see? Great! Want changes? We'll adjust it. 
                Only pay when you're 100% happy with your website.
              </p>
            </div>
            
            <div class="space-y-4">
              <div class="w-16 h-16 bg-gradient-to-br from-accent-slate to-accent-teal rounded-full flex items-center justify-center mx-auto">
                <span class="text-2xl font-black text-white">3</span>
              </div>
              <h4 class="text-xl font-bold text-white">Go Live!</h4>
              <p class="text-white/70 leading-relaxed">
                We move your site to your own domain and handle all the technical stuff. 
                You're online and ready for customers!
              </p>
            </div>
          </div>
          
          <div class="text-center mt-12">
            <a href="/info" class="glass-effect px-8 py-4 rounded-full text-accent-teal border border-accent-teal/30 hover:bg-accent-teal/10 font-bold text-lg transition-all duration-300">
              <Info class="w-5 h-5 inline mr-2" />
              Learn More About Our Process
            </a>
          </div>
        </div>

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 mb-16">
          {services.map((service, index) => (
            <div class="glass-effect rounded-3xl p-8 border border-dark-border slide-in service-card hover:border-accent-slate/30 transition-all duration-500" 
                 style={`animation-delay: ${index * 0.1}s;`}>
              
              <!-- Service Icon -->
              <div class="text-center mb-6">
                <div class="bg-gradient-to-br from-accent-slate to-accent-teal w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4 shadow-lg service-icon" role="img" aria-label={`${service.title} service icon`}>
                  {(() => {
                    const IconComponent = getIconComponent(service.icon);
                    return <IconComponent class="w-8 h-8 text-white" aria-hidden="true" />;
                  })()}
                </div>
                <h3 class="text-xl font-black text-white mb-3 font-fredoka">
                  {service.title}
                </h3>
                <div class="w-16 h-1 bg-gradient-to-r from-accent-slate to-accent-teal mx-auto rounded-full"></div>
              </div>
              
              <!-- Service Description -->
              <p class="text-white/80 text-center mb-6 leading-relaxed">
                {service.description}
              </p>
              
              <!-- Service Details -->
              <ul class="space-y-2">
                {service.details.map((detail) => (
                  <li class="text-white/70 text-sm flex items-center">
                    <CheckCircle class="w-4 h-4 text-accent-slate mr-3 flex-shrink-0" aria-hidden="true" />
                    {detail}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>

        <!-- Value Proposition -->
        <div class="text-center slide-in">
          <div class="glass-effect rounded-3xl p-8 md:p-12 max-w-4xl mx-auto border border-dark-border">
            <h3 class="text-3xl md:text-4xl font-black text-white mb-6 font-fredoka">
              <span class="sparkle" aria-hidden="true">🎯</span> Why Choose Cozyartz Media Group? <span class="sparkle" aria-hidden="true">⭐</span>
            </h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-8">
              <div class="text-center">
                <div class="text-4xl mb-3" role="img" aria-label="Trophy icon representing WOSB Certification">🏆</div>
                <h4 class="text-xl font-bold text-accent-slate mb-2">WOSB Certified</h4>
                <p class="text-white/70">Women-Owned Small Business certified by the SBA</p>
              </div>
              <div class="text-center">
                <div class="text-4xl mb-3" role="img" aria-label="Lightning bolt icon representing fast results">⚡</div>
                <h4 class="text-xl font-bold text-accent-slate mb-2">Fast Results</h4>
                <p class="text-white/70">Get online quickly with our streamlined process</p>
              </div>
              <div class="text-center">
                <div class="text-4xl mb-3" role="img" aria-label="Tools icon representing full service">🔧</div>
                <h4 class="text-xl font-bold text-accent-slate mb-2">Full Service</h4>
                <p class="text-white/70">Everything you need under one roof</p>
              </div>
            </div>
            
            <div class="bg-gradient-to-r from-accent-slate/20 to-accent-teal/20 rounded-2xl p-6 mb-8">
              <p class="text-white text-lg leading-relaxed">
                <strong class="text-accent-slate">The Problem:</strong> Your amazing business can't be found online. 
                Customers are searching for what you offer, but they're finding your competitors instead.
              </p>
              <p class="text-white text-lg leading-relaxed mt-4">
                <strong class="text-accent-teal">The Solution:</strong> Professional web presence + Google Maps listing + SEO 
                = More customers finding YOU when they search.
              </p>
            </div>
            
            <a href="tel:(269)261-0069" 
               class="pulse-button bg-gradient-to-r from-accent-slate to-accent-teal hover:from-accent-slate-light hover:to-accent-teal-light text-white font-black px-12 py-4 rounded-full text-xl shadow-2xl transform transition-all duration-300 hover:scale-105 inline-block focus:outline-none focus:ring-4 focus:ring-accent-teal/50"
               aria-label="Call to get started with Cozyartz Media Group today">
              <Rocket class="w-6 h-6 inline mr-3" aria-hidden="true" />GET STARTED TODAY
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <Footer />

    <!-- Toast Notification -->
    <div id="toast" class="toast-notification">
      <div class="toast-content">
        <div class="toast-icon">
          <Lightbulb class="w-6 h-6" />
        </div>
        <div class="toast-text">
          <h4>💡 Pro Tip</h4>
          <p>87% of consumers read online reviews before visiting a business. Let's get you found!</p>
        </div>
        <button id="close-toast" class="toast-close" aria-label="Close notification">
          <X class="w-5 h-5" aria-hidden="true" />
        </button>
      </div>
    </div>
    
    <!-- Scripts -->
    <script is:inline>
      document.addEventListener('DOMContentLoaded', function() {
        // Toast functionality
        const showToastBtn = document.getElementById('show-toast');
        const toast = document.getElementById('toast');
        const closeToastBtn = document.getElementById('close-toast');

        function showToast() {
          toast.classList.add('show');
          setTimeout(() => {
            hideToast();
          }, 5000);
        }

        function hideToast() {
          toast.classList.remove('show');
        }

        showToastBtn?.addEventListener('click', showToast);
        closeToastBtn?.addEventListener('click', hideToast);

        // Auto-show toast after 3 seconds
        setTimeout(showToast, 3000);

        // Floating particles animation
        const particles = document.querySelectorAll('.particle');
        particles.forEach((particle, index) => {
          particle.style.left = Math.random() * 100 + '%';
          particle.style.top = Math.random() * 100 + '%';
          particle.style.animationDelay = index * 0.5 + 's';
        });

        // Service card hover effects
        const serviceCards = document.querySelectorAll('.service-card');
        serviceCards.forEach(card => {
          card.addEventListener('mouseenter', function() {
            this.style.transform = 'translateY(-10px) scale(1.02)';
          });
          
          card.addEventListener('mouseleave', function() {
            this.style.transform = 'translateY(0) scale(1)';
          });
        });
      });
    </script>
  </body>
</html>
