---
import SEO from '../components/SEO.astro';
import RestaurantLayout from '../components/layouts/RestaurantLayout.astro';
import FoodTruckLayout from '../components/layouts/FoodTruckLayout.astro';
import { businessConfigs, getBusinessSlugs, getBusinessConfig } from '../data/businesses.js';

export async function getStaticPaths() {
  // Generate paths for all configured businesses
  return getBusinessSlugs().map(business => ({
    params: { business }
  }));
}

const { business } = Astro.params;
const config = getBusinessConfig(business);

// If business not found, redirect to 404
if (!config) {
  return Astro.redirect('/404');
}

// Determine which layout to use based on layoutType
const layoutType = config.layoutType || 'universal';

// Helper function for service icons in universal layout
function getServiceIcon(service) {
  const serviceKeywords = service.toLowerCase();
  
  if (serviceKeywords.includes('plumb')) return 'fas fa-wrench';
  if (serviceKeywords.includes('electric')) return 'fas fa-bolt';
  if (serviceKeywords.includes('hvac') || serviceKeywords.includes('heating') || serviceKeywords.includes('cooling')) return 'fas fa-thermometer-half';
  if (serviceKeywords.includes('roof')) return 'fas fa-home';
  if (serviceKeywords.includes('clean')) return 'fas fa-broom';
  if (serviceKeywords.includes('lawn') || serviceKeywords.includes('landscape')) return 'fas fa-seedling';
  if (serviceKeywords.includes('paint')) return 'fas fa-paint-brush';
  if (serviceKeywords.includes('floor')) return 'fas fa-th-large';
  if (serviceKeywords.includes('window')) return 'fas fa-window-maximize';
  if (serviceKeywords.includes('security')) return 'fas fa-shield-alt';
  if (serviceKeywords.includes('pest')) return 'fas fa-bug';
  if (serviceKeywords.includes('tree')) return 'fas fa-tree';
  if (serviceKeywords.includes('concrete') || serviceKeywords.includes('driveway')) return 'fas fa-road';
  if (serviceKeywords.includes('fence')) return 'fas fa-border-style';
  if (serviceKeywords.includes('gutter')) return 'fas fa-tint';
  if (serviceKeywords.includes('kitchen') || serviceKeywords.includes('cabinet')) return 'fas fa-utensils';
  if (serviceKeywords.includes('bathroom')) return 'fas fa-bath';
  if (serviceKeywords.includes('deck') || serviceKeywords.includes('patio')) return 'fas fa-layer-group';
  if (serviceKeywords.includes('garage')) return 'fas fa-car';
  if (serviceKeywords.includes('basement')) return 'fas fa-stairs';
  
  // Default icons for common business types
  return 'fas fa-cogs';
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <SEO 
    title={config.title}
    description={config.description}
    businessName={config.businessName}
    phone={config.phone}
    address={config.address}
    geo={config.geo}
    hours={config.hours}
    services={config.services}
    keywords={config.keywords?.join(', ')}
    businessType={config.businessType}
    foundingDate={config.foundingDate}
    copyrightYear={config.copyrightYear}
    ownerInfo={config.ownerInfo}
  />
  
  <!-- Load custom fonts for this business -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin>
  
  <!-- Universal font loading for all layouts -->
  <link href="https://fonts.googleapis.com/css2?family=Fredoka+One:wght@400&family=Fredoka:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700;800;900&family=Bebas+Neue:wght@400&family=Merriweather:wght@300;400;700;900&family=Open+Sans:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
  
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <!-- Template Selection Logic -->
  {layoutType === 'restaurant' && <RestaurantLayout config={config} />}
  {layoutType === 'foodtruck' && <FoodTruckLayout config={config} />}
  
  <!-- Enhanced Universal Layout for Professional Service Businesses -->
  {layoutType === 'universal' && (
    <div class="universal-layout min-h-screen">
      <!-- Load dynamic CSS variables for universal layout -->
      <style define:vars={{
        businessPrimary: config.theme?.primaryColor || '#DC2626',
        businessSecondary: config.theme?.secondaryColor || '#F97316',
        businessAccent: config.theme?.accentColor || '#FBBF24',
        businessBg: config.theme?.backgroundColor || '#1F2937',
        businessText: config.theme?.textColor || '#F3F4F6',
        businessFont: config.theme?.fontFamily || 'Inter, sans-serif',
        gradientFrom: config.theme?.gradientFrom || '#DC2626',
        gradientTo: config.theme?.gradientTo || '#F97316'
      }}>
        .universal-layout {
          --business-primary: var(--businessPrimary);
          --business-secondary: var(--businessSecondary);
          --business-accent: var(--businessAccent);
          --business-bg: var(--businessBg);
          --business-text: var(--businessText);
          --business-font: var(--businessFont);
          --gradient-from: var(--gradientFrom);
          --gradient-to: var(--gradientTo);
          --primary-rgb: 220, 38, 38;
          --secondary-rgb: 249, 115, 22;
          --accent-rgb: 251, 191, 36;
          
          font-family: var(--business-font), -apple-system, BlinkMacSystemFont, sans-serif;
          background: linear-gradient(135deg, #0f172a 0%, #1e293b 30%, #334155 70%, #1e293b 100%);
          color: var(--business-text);
          min-height: 100vh;
          position: relative;
        }
        
        /* Background Effects */
        .universal-layout::before {
          content: '';
          position: absolute;
          inset: 0;
          background: 
            radial-gradient(circle at 20% 50%, rgba(var(--primary-rgb), 0.1) 0%, transparent 50%),
            radial-gradient(circle at 80% 20%, rgba(var(--secondary-rgb), 0.08) 0%, transparent 50%),
            radial-gradient(circle at 40% 80%, rgba(var(--accent-rgb), 0.06) 0%, transparent 50%);
          pointer-events: none;
          z-index: 1;
        }
        
        .universal-layout > * {
          position: relative;
          z-index: 2;
        }
        
        /* Professional Color System */
        .business-primary { color: var(--business-primary); }
        .business-secondary { color: var(--business-secondary); }
        .business-accent { color: var(--business-accent); }
        .bg-business-primary { background-color: var(--business-primary); }
        .bg-business-secondary { background-color: var(--business-secondary); }
        .bg-business-gradient { 
          background: linear-gradient(135deg, var(--gradient-from), var(--gradient-to)); 
        }
        .border-business-primary { border-color: var(--business-primary); }
        
        /* Premium Glass Effects */
        .glass-morphism {
          background: rgba(255, 255, 255, 0.05);
          backdrop-filter: blur(20px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          box-shadow: 
            0 8px 32px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.2);
        }
        
        /* Enhanced Typography */
        .text-gradient {
          background: linear-gradient(135deg, var(--business-primary), var(--business-secondary));
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          background-clip: text;
        }
        
        /* Professional Card Styling */
        .professional-card {
          background: rgba(255, 255, 255, 0.03);
          backdrop-filter: blur(20px);
          border: 1px solid rgba(255, 255, 255, 0.08);
          border-radius: 1rem;
          padding: 2rem;
          transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
          position: relative;
          overflow: hidden;
        }
        
        .professional-card::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          height: 1px;
          background: linear-gradient(90deg, transparent, var(--business-accent), transparent);
          opacity: 0;
          transition: opacity 0.3s ease;
        }
        
        .professional-card:hover {
          background: rgba(255, 255, 255, 0.08);
          border-color: rgba(var(--accent-rgb), 0.3);
          transform: translateY(-8px);
          box-shadow: 
            0 25px 50px rgba(0, 0, 0, 0.4),
            0 0 40px rgba(var(--primary-rgb), 0.2);
        }
        
        .professional-card:hover::before {
          opacity: 1;
        }
        
        /* Enhanced Button Styling */
        .premium-button {
          display: inline-flex;
          align-items: center;
          gap: 0.75rem;
          padding: 1rem 2rem;
          background: linear-gradient(135deg, var(--business-primary), var(--business-secondary));
          color: white;
          border: none;
          border-radius: 0.75rem;
          font-weight: 700;
          font-size: 1.125rem;
          text-decoration: none;
          transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
          position: relative;
          overflow: hidden;
          box-shadow: 0 8px 25px rgba(var(--primary-rgb), 0.4);
        }
        
        .premium-button::before {
          content: '';
          position: absolute;
          top: 0;
          left: -100%;
          width: 100%;
          height: 100%;
          background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
          transition: left 0.5s ease;
        }
        
        .premium-button:hover {
          transform: translateY(-3px) scale(1.02);
          box-shadow: 0 15px 40px rgba(var(--primary-rgb), 0.6);
        }
        
        .premium-button:hover::before {
          left: 100%;
        }
        
        .secondary-button {
          display: inline-flex;
          align-items: center;
          gap: 0.75rem;
          padding: 1rem 2rem;
          background: rgba(255, 255, 255, 0.1);
          backdrop-filter: blur(20px);
          color: white;
          border: 2px solid rgba(255, 255, 255, 0.2);
          border-radius: 0.75rem;
          font-weight: 600;
          font-size: 1.125rem;
          text-decoration: none;
          transition: all 0.3s ease;
        }
        
        .secondary-button:hover {
          background: rgba(255, 255, 255, 0.15);
          border-color: rgba(255, 255, 255, 0.4);
          transform: translateY(-2px);
        }
        
        /* Animated Elements */
        .fade-in-up {
          opacity: 0;
          transform: translateY(30px);
          animation: fadeInUp 0.8s ease-out forwards;
        }
        
        @keyframes fadeInUp {
          to {
            opacity: 1;
            transform: translateY(0);
          }
        }
        
        .stagger-children > * {
          opacity: 0;
          transform: translateY(20px);
          animation: fadeInUp 0.6s ease-out forwards;
        }
        
        .stagger-children > *:nth-child(1) { animation-delay: 0.1s; }
        .stagger-children > *:nth-child(2) { animation-delay: 0.2s; }
        .stagger-children > *:nth-child(3) { animation-delay: 0.3s; }
        .stagger-children > *:nth-child(4) { animation-delay: 0.4s; }
        .stagger-children > *:nth-child(5) { animation-delay: 0.5s; }
        .stagger-children > *:nth-child(6) { animation-delay: 0.6s; }
        
        /* Icon Styling */
        .service-icon {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 4rem;
          height: 4rem;
          background: linear-gradient(135deg, var(--business-primary), var(--business-secondary));
          border-radius: 1rem;
          color: white;
          font-size: 1.5rem;
          margin-bottom: 1.5rem;
          box-shadow: 0 8px 25px rgba(var(--primary-rgb), 0.3);
          transition: all 0.3s ease;
        }
        
        .professional-card:hover .service-icon {
          transform: scale(1.1) rotate(5deg);
          box-shadow: 0 12px 35px rgba(var(--primary-rgb), 0.5);
        }
        
        /* Business Mood Styling */
        .bold-urban {
          font-weight: 800;
          text-transform: uppercase;
          letter-spacing: 0.05em;
        }
        
        .warm-traditional {
          font-weight: 400;
          letter-spacing: 0.01em;
          line-height: 1.6;
        }
        
        /* Enhanced Grid Systems */
        .services-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
          gap: 2rem;
          margin-top: 3rem;
        }
        
        .contact-grid {
          display: grid;
          grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
          gap: 2rem;
          margin-top: 2rem;
        }
        
        /* Floating Action Elements */
        .floating-elements {
          position: absolute;
          inset: 0;
          pointer-events: none;
          z-index: 1;
        }
        
        .floating-circle {
          position: absolute;
          border-radius: 50%;
          background: linear-gradient(135deg, rgba(var(--primary-rgb), 0.1), rgba(var(--secondary-rgb), 0.1));
          animation: float 8s ease-in-out infinite;
        }
        
        .floating-circle:nth-child(1) {
          width: 300px;
          height: 300px;
          top: 10%;
          left: 5%;
          animation-delay: 0s;
        }
        
        .floating-circle:nth-child(2) {
          width: 200px;
          height: 200px;
          top: 60%;
          right: 10%;
          animation-delay: -3s;
        }
        
        .floating-circle:nth-child(3) {
          width: 150px;
          height: 150px;
          bottom: 20%;
          left: 15%;
          animation-delay: -6s;
        }
        
        @keyframes float {
          0%, 100% { transform: translateY(0px) rotate(0deg); }
          33% { transform: translateY(-20px) rotate(2deg); }
          66% { transform: translateY(10px) rotate(-1deg); }
        }
        
        /* Status Indicators */
        .status-indicator {
          display: inline-flex;
          align-items: center;
          gap: 0.5rem;
          padding: 0.5rem 1rem;
          background: rgba(var(--accent-rgb), 0.2);
          border: 1px solid rgba(var(--accent-rgb), 0.3);
          border-radius: 50px;
          color: var(--business-accent);
          font-size: 0.875rem;
          font-weight: 600;
        }
        
        .status-dot {
          width: 8px;
          height: 8px;
          background: var(--business-accent);
          border-radius: 50%;
          animation: pulse-dot 2s ease-in-out infinite;
        }
        
        @keyframes pulse-dot {
          0%, 100% { opacity: 1; transform: scale(1); }
          50% { opacity: 0.5; transform: scale(1.2); }
        }
        
        /* Enhanced Responsive Design */
        @media (max-width: 768px) {
          .services-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
          }
          
          .contact-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
          }
          
          .professional-card {
            padding: 1.5rem;
          }
          
          .premium-button,
          .secondary-button {
            width: 100%;
            justify-content: center;
          }
          
          .floating-circle {
            display: none;
          }
        }
        
        @media (max-width: 480px) {
          .professional-card {
            padding: 1rem;
          }
          
          .service-icon {
            width: 3rem;
            height: 3rem;
            font-size: 1.25rem;
          }
        }
        
        /* Accessibility */
        @media (prefers-reduced-motion: reduce) {
          .fade-in-up,
          .stagger-children > *,
          .floating-circle {
            animation: none !important;
            opacity: 1 !important;
            transform: none !important;
          }
        }
        
        .focus-visible:focus {
          outline: 3px solid var(--business-accent);
          outline-offset: 2px;
        }
      </style>
      
      <!-- Enhanced Universal Layout Content -->
      <div class="min-h-screen">
        <!-- Floating Background Elements -->
        <div class="floating-elements">
          <div class="floating-circle"></div>
          <div class="floating-circle"></div>
          <div class="floating-circle"></div>
        </div>
        
        <!-- Premium Header -->
        <header class="glass-morphism border-b border-white/10 sticky top-0 z-50">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 bg-business-gradient rounded-lg flex items-center justify-center">
                  <i class="fas fa-building text-white font-bold" aria-hidden="true"></i>
                </div>
                <h1 class={`text-2xl font-bold text-gradient ${config.theme?.mood === 'bold-urban' ? 'bold-urban' : 'warm-traditional'}`}>
                  {config.businessName}
                </h1>
              </div>
              
              <div class="hidden md:flex items-center space-x-8">
                <a href="#services" class="text-white/80 hover:text-white transition-colors font-semibold relative group">
                  Services
                  <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-business-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="#about" class="text-white/80 hover:text-white transition-colors font-semibold relative group">
                  About
                  <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-business-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href="#contact" class="text-white/80 hover:text-white transition-colors font-semibold relative group">
                  Contact
                  <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-business-accent transition-all duration-300 group-hover:w-full"></span>
                </a>
                <a href={`tel:${config.phone}`} class="premium-button focus-visible"
                   aria-label={`Call ${config.businessName} at ${config.phone}`}>
                  <i class="fas fa-phone" aria-hidden="true"></i>
                  Call Now
                </a>
              </div>
              
              <!-- Enhanced Mobile menu button -->
              <div class="md:hidden">
                <button class="glass-morphism p-3 rounded-lg text-white" aria-label="Open menu">
                  <i class="fas fa-bars text-lg" aria-hidden="true"></i>
                </button>
              </div>
            </div>
          </div>
        </header>

        <!-- Enhanced Hero Section -->
        <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
          <!-- Premium gradient background -->
          <div class="absolute inset-0">
            <div class="absolute inset-0 bg-business-gradient opacity-90"></div>
            <div class="absolute inset-0 bg-gradient-to-br from-black/20 via-transparent to-black/40"></div>
          </div>
          
          <!-- Hero content -->
          <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
            <!-- Status indicator -->
            <div class="status-indicator mb-8 fade-in-up">
              <div class="status-dot"></div>
              Available Now
            </div>
            
            <h2 class={`text-5xl md:text-7xl lg:text-8xl font-bold mb-8 fade-in-up text-gradient ${config.theme?.mood === 'bold-urban' ? 'bold-urban' : 'warm-traditional'}`}
                style="animation-delay: 0.2s;">
              {config.heroTitle}
            </h2>
            
            <p class="text-xl md:text-2xl lg:text-3xl mb-12 opacity-90 max-w-4xl mx-auto leading-relaxed fade-in-up"
               style="animation-delay: 0.4s;">
              {config.heroSubtitle}
            </p>
            
            <div class="flex flex-col sm:flex-row gap-6 justify-center fade-in-up" style="animation-delay: 0.6s;">
              <a href={`tel:${config.ctaPhone || config.phone}`} class="premium-button focus-visible"
                 aria-label={`${config.ctaText || 'Call Now'} - Call ${config.ctaPhone || config.phone}`}>
                <i class="fas fa-phone" aria-hidden="true"></i>
                {config.ctaText || 'Call Now'}
              </a>
              <a href="#contact" class="secondary-button focus-visible">
                <i class="fas fa-quote-left" aria-hidden="true"></i>
                Get Quote
              </a>
            </div>
            
            <!-- Trust indicators -->
            <div class="flex flex-wrap justify-center gap-6 mt-12 fade-in-up" style="animation-delay: 0.8s;">
              <div class="glass-morphism px-4 py-2 rounded-full">
                <span class="text-business-accent font-semibold">Licensed & Insured</span>
              </div>
              <div class="glass-morphism px-4 py-2 rounded-full">
                <span class="text-business-accent font-semibold">5★ Reviews</span>
              </div>
              <div class="glass-morphism px-4 py-2 rounded-full">
                <span class="text-business-accent font-semibold">Local Experts</span>
              </div>
            </div>
          </div>
        </section>

        <!-- Enhanced Services Section -->
        <section id="services" class="py-20 relative">
          <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-b from-transparent via-black/20 to-transparent"></div>
          </div>
          
          <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
              <div class="status-indicator mb-6">
                <i class="fas fa-tools text-business-accent"></i>
                Our Expertise
              </div>
              <h3 class={`text-4xl md:text-5xl lg:text-6xl font-bold mb-8 text-gradient ${config.theme?.mood === 'bold-urban' ? 'bold-urban' : 'warm-traditional'}`}>
                Professional Services
              </h3>
              <p class="text-xl md:text-2xl text-white/80 max-w-3xl mx-auto leading-relaxed">
                Quality workmanship and exceptional service you can trust
              </p>
            </div>
            
            <div class="services-grid stagger-children">
              {config.services.map((service, index) => (
                <div class="professional-card">
                  <div class="service-icon">
                    <i class={getServiceIcon(service)} aria-hidden="true"></i>
                  </div>
                  <h4 class={`text-xl font-bold mb-4 text-white ${config.theme?.mood === 'bold-urban' ? 'bold-urban' : 'warm-traditional'}`}>
                    {service}
                  </h4>
                  <p class="text-white/70 leading-relaxed mb-6">
                    Professional {service.toLowerCase()} with attention to detail and customer satisfaction. 
                    We deliver quality results on time and within budget.
                  </p>
                  <div class="flex items-center justify-between">
                    <div class="text-business-accent font-semibold">
                      <i class="fas fa-check mr-2"></i>
                      Quality Guaranteed
                    </div>
                    <button class="text-business-accent hover:text-white transition-colors">
                      <i class="fas fa-arrow-right"></i>
                    </button>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </section>

        <!-- Enhanced About Section -->
        <section id="about" class="py-20 relative">
          <div class="absolute inset-0">
            <div class="absolute inset-0 bg-gradient-to-r from-black/30 via-transparent to-black/30"></div>
          </div>
          
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
              <div class="space-y-8 fade-in-up">
                <div class="status-indicator">
                  <i class="fas fa-award text-business-accent"></i>
                  About Us
                </div>
                
                <h3 class={`text-4xl md:text-5xl lg:text-6xl font-bold text-gradient mb-8 ${config.theme?.mood === 'bold-urban' ? 'bold-urban' : 'warm-traditional'}`}>
                  Excellence in {config.address.city}
                </h3>
                
                <p class="text-lg md:text-xl text-white/80 mb-8 leading-relaxed">
                  We're a locally-owned business serving the {config.address.city} community with pride and dedication. 
                  Our commitment to quality and customer service sets us apart from the competition.
                </p>
                
                <div class="grid gap-4">
                  <div class="professional-card p-4">
                    <div class="flex items-center gap-4">
                      <div class="w-12 h-12 bg-business-gradient rounded-lg flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-map-marker-alt text-white" aria-hidden="true"></i>
                      </div>
                      <div>
                        <div class="font-semibold text-white mb-1">Our Location</div>
                        <div class="text-white/70">{config.address.street}, {config.address.city}, {config.address.state} {config.address.zip}</div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="professional-card p-4">
                    <div class="flex items-center gap-4">
                      <div class="w-12 h-12 bg-business-gradient rounded-lg flex items-center justify-center flex-shrink-0">
                        <i class="fas fa-phone text-white" aria-hidden="true"></i>
